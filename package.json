{
  "name": "paopu",
  "version": "0.1.0",
  "description": "",
  "main": "bin/index.js",
  "type": "module",
  "bin": {
    "paopu": "bin/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "paopu",
    "eslint:check": "eslint -c .eslintrc.json",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "release": "dotenv release-it -- --ci"
  },
  "dependencies": {
    "jshashes": "^1.0.8",
    "ora": "^6.0.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "babel-eslint": "^10.1.0",
    "commithelper": "^1.2.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3",
    "rollup": "^2.62.0",
    "rotom": "^0.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/paopu.git"
  },
  "keywords": [
    "script",
    "bin script",
    "documentation",
    "cdn",
    "sri",
    "sub-resource integrity",
    "html",
    "web development",
    "node",
    "npm"
  ],
  "directories": {
    "bin": "bin"
  },
  "files": [
    "bin/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "George Treviranus <geowtrev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/paopu/issues"
  },
  "homepage": "https://github.com/geotrev/paopu#readme",
  "lint-staged": {
    "bin/**/*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "commithelper": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "style",
      "refactor",
      "perf",
      "test"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": "npm test"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    }
  }
}
